  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "openapi-typescript-codegen": "^0.29.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
